    "long_to_short": {
      "youtube_long_to_shorts": [
        "Extract most engaging 60-second segment",
        "Add trending music",
        "Increase pace by 2x",
        "Add attention-grabbing text overlay"
      ],
      "blog_to_video": [
        "Extract 3-5 key points",
        "Create visual representations",
        "Add voiceover or captions",
        "Include clear CTA"
      ]
    },
    "cross_platform": {
      "instagram_to_tiktok": [
        "Remove Instagram-specific elements",
        "Add TikTok trending sounds",
        "Adjust pacing for TikTok audience",
        "Include TikTok-native text style"
      ],
      "tiktok_to_instagram": [
        "Polish visual aesthetics",
        "Remove TikTok watermarks",
        "Add Instagram-appropriate music",
        "Adjust aspect ratio if needed"
      ],
      "video_to_pinterest": [
        "Extract key frames as pins",
        "Create step-by-step graphics",
        "Add Pinterest-optimized descriptions",
        "Include save-worthy overlays"
      ]
    }
